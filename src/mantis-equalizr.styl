$mantis ?= {}
$mantis.equalizr = {}

*
	box-sizing border-box

	&:before
	&:after
		box-sizing border-box

:hover,
:focus
	outline-width 0
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)

html
	height 100%
	font-family sans-serif
	-webkit-font-smoothing antialiased

body
	margin 0
	min-height 100%

a
	background-color transparent
	text-decoration none

button,
input,
select,
textarea
	margin 0
	padding 0
	font inherit
	line-height normal
	background-color transparent
	border none
	border-radius 0
	appearance none

a,
button,
input[type=button],
input[type=reset],
input[type=submit]
	color inherit
	cursor pointer

input[type=search]
	appearance textfield

	&::-webkit-search-decoration,
	&::-webkit-search-cancel-button
		display none
		appearance none

&:-webkit-autofill
	transition background-color 5000s ease-in-out 0s
